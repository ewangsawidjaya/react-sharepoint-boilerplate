//Main application wrapper
#app {
	width: 100%;
	height: 100%;
    min-width: 1200px;
    max-width: 1200px;

	* {
		box-sizing: border-box;
    }
    
    .flex-container {
        display: flex;
        flex-direction: row;
    }
    .sections {
        width: 1000px;
    }
    button:not([class^="react-datepicker_"]) {
        //margin-left: 0;
        border: 1px solid rgba(0, 0, 0, 0.1);
        padding: 7px 10px;
        font-weight: 700;
        display: inline-block;
        text-transform: uppercase;
        font-size: 0.6rem;
        letter-spacing: 1px;
        cursor: pointer;
        border-radius: 3px;

        .fa, .far, .fas {
            margin-right: 7px;
            font-size: 14px;
        }

        &:disabled {
            opacity: 0.3;
            cursor: not-allowed;
            
            &:hover + .tool-tip {
                display: block;
            }
        }
    }

    .Toastify__close-button {
        min-width: 0;
    }
    .Toastify__toast-body {
        font-size: 14px;
        line-height: 20px;
    }
    .Toastify__toast--success {
          background: #3a9e87 url(data:image/png;base64,) no-repeat 20px 50%;
            padding: 10px 10px 10px 4rem;
            border-radius: 5px;

            button:hover {
                border-color: transparent !important;
                background-color: transparent !important;
            }
    }
    .Toastify__toast--error {
        background: #a94442 url(data:image/png;base64,) no-repeat 20px 50%;
        padding: 10px 10px 10px 4rem;
        border-radius: 5px;
        
        button:hover {
            border-color: transparent !important;
            background-color: transparent !important;
        }
    }
}